<Application
    x:Class="Mobile_Application.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mobile_Application"
    xmlns:vm="using:Mobile_Application.ViewModel"
    RequestedTheme="Light">

    <Application.Resources>
        <vm:ViewModelLocator x:Key="Locator"/>
        <Style x:Key="backgroundStyle" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="/Assets/background.png"/> 
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="backgroundStyleStackPanel" TargetType="StackPanel">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="/Assets/background.png"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>

</Application>

